<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardElevation="20dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_item_tamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:background="@color/purple_700"
            app:layout_constraintStart_toStartOf="@+id/image_item_photo"
            app:layout_constraintTop_toTopOf="@+id/image_item_photo" />

        <TextView
            android:id="@+id/text_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/purple_700"
            app:layout_constraintStart_toStartOf="@+id/image_item_photo"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_tamp" />

        <TextView
            android:id="@+id/text_view_item_min_tamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:background="@color/purple_700"
            app:layout_constraintStart_toStartOf="@+id/image_item_photo"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_name" />

        <TextView
            android:id="@+id/text_view_item_max_tamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:background="@color/purple_700"
            app:layout_constraintStart_toStartOf="@+id/text_view_item_min_tamp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_min_tamp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>